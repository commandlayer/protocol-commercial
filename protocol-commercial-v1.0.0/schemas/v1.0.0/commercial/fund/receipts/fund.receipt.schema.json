{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/fund/receipts/fund.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "fund.receipt",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "x402",
    "actor",
    "trace",
    "status",
    "result"
  ],
  "properties": {
    "x402": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "verb",
        "version"
      ],
      "properties": {
        "verb": {
          "type": "string",
          "const": "fund"
        },
        "version": {
          "type": "string",
          "const": "1.0.0"
        }
      }
    },
    "actor": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(?:[a-z0-9-]+\\.)*[a-z0-9-]+\\.eth$"
        },
        {
          "type": "string",
          "pattern": "^did:[a-z0-9]+:.*$"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    },
    "trace": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "requestId",
        "ts"
      ],
      "properties": {
        "requestId": {
          "type": "string",
          "maxLength": 128
        },
        "ts": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "error"
      ]
    },
    "result": {
      "description": "Verb-specific outcome or error info",
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    }
  }
}
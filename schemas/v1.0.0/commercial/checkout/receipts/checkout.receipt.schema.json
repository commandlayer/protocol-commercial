{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/checkout/receipts/checkout.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "checkout.receipt",
  "description": "Receipt schema for a checkout invocation, extending the global receipt.base.",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "result": {
          "description": "Checkout-specific result payload.",
          "type": "object",
          "additionalProperties": false,
          "required": ["checkout_id", "amount", "settlement", "status"],
          "properties": {
            "checkout_id": {
              "description": "Logical identifier for this checkout, used for follow-up operations (capture, refund, verify).",
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "amount": {
              "description": "Amount that was authorized or captured.",
              "allOf": [
                { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.amount.schema.json" }
              ]
            },
            "settlement": {
              "description": "Settlement instructions actually used by the provider.",
              "allOf": [
                { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.settlement.schema.json" }
              ]
            },
            "status": {
              "description": "Checkout outcome status from the payment provider.",
              "type": "string",
              "enum": ["authorized", "captured", "pending", "failed", "cancelled"]
            },
            "transaction_id": {
              "description": "Provider-level transaction identifier, if available.",
              "type": "string",
              "maxLength": 128
            },
            "expires_at": {
              "description": "RFC 3339 timestamp when this checkout authorization expires, if applicable.",
              "type": "string",
              "format": "date-time",
              "maxLength": 64
            },
            "metadata": {
              "description": "Non-normative provider or integrator metadata.",
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "usage": {
          "description": "Optional metering / usage data (non-normative).",
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  ]
}

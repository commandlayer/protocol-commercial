{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/authorize/requests/authorize.request.schema.json",
  "title": "authorize.request",
  "description": "Request to pre-authorize a commercial payment for a later capture/checkout.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "x402": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
    },
    "trace": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json"
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "amount": {
          "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.amount.schema.json"
        },
        "settlement": {
          "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.settlement.schema.json"
        },
        "purpose": {
          "type": "string",
          "minLength": 1,
          "maxLength": 512
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["amount", "settlement"]
    }
  },
  "required": ["x402", "trace", "payload"]
}

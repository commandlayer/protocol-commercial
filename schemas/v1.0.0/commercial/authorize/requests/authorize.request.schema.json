{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/authorize/requests/authorize.request.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "authorize.request",
  "description": "Pre-authorize a crypto payment for later capture; can be from a checkout or standalone.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "x402": { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json" },
    "trace": { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json" },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "checkout_id": { "type": "string", "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$" },
        "amount": { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.amount.schema.json" },
        "settlement": { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.settlement.schema.json" },
        "purpose": { "type": "string", "minLength": 1, "maxLength": 512 },
        "metadata": {
          "type": "object",
          "additionalProperties": true,
          "maxProperties": 100,
          "propertyNames": { "type": "string", "maxLength": 64 }
        }
      },
      "allOf": [
        { "anyOf": [ { "required": ["checkout_id"] }, { "required": ["amount","settlement"] } ] }
      ]
    }
  },
  "required": ["x402","trace","payload"]
}

{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/ship/receipts/ship.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ship.receipt",
  "description": "Receipt schema for a shipping / fulfillment invocation.",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "result": {
          "description": "Shipment-specific result payload.",
          "type": "object",
          "additionalProperties": false,
          "required": ["shipment_id", "status"],
          "properties": {
            "shipment_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "carrier": {
              "type": "string",
              "maxLength": 64
            },
            "service": {
              "description": "Service level (e.g., ground, 2-day, overnight).",
              "type": "string",
              "maxLength": 64
            },
            "tracking_number": {
              "type": "string",
              "maxLength": 128
            },
            "eta": {
              "description": "Estimated delivery timestamp, if known.",
              "type": "string",
              "format": "date-time",
              "maxLength": 64
            },
            "status": {
              "type": "string",
              "enum": ["created", "in_transit", "delivered", "failed", "cancelled"]
            },
            "metadata": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "usage": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  ]
}

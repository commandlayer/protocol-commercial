{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/ship/requests/ship.request.schema.json",
  "title": "ship.request (v1.0.0)",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "trace",
    "identity",
    "order_id",
    "from",
    "to",
    "line_items",
    "service_level"
  ],

  "properties": {
    "trace": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json"
    },
    "identity": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/identity.schema.json"
    },

    "order_id": {
      "description": "Order / checkout identifier this shipment fulfills.",
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },

    "from": {
      "description": "Origin address.",
      "type": "object",
      "additionalProperties": false,
      "required": ["country", "line1", "city", "postal_code"],
      "properties": {
        "name": { "type": "string", "maxLength": 256 },
        "line1": { "type": "string", "maxLength": 256 },
        "line2": { "type": "string", "maxLength": 256 },
        "city": { "type": "string", "maxLength": 128 },
        "region": { "type": "string", "maxLength": 128 },
        "postal_code": { "type": "string", "maxLength": 32 },
        "country": { "type": "string", "minLength": 2, "maxLength": 2 },
        "phone": { "type": "string", "maxLength": 64 },
        "metadata": { "type": "object", "additionalProperties": true }
      }
    },

    "to": {
      "description": "Destination address.",
      "type": "object",
      "additionalProperties": false,
      "required": ["country", "line1", "city", "postal_code"],
      "properties": {
        "name": { "type": "string", "maxLength": 256 },
        "line1": { "type": "string", "maxLength": 256 },
        "line2": { "type": "string", "maxLength": 256 },
        "city": { "type": "string", "maxLength": 128 },
        "region": { "type": "string", "maxLength": 128 },
        "postal_code": { "type": "string", "maxLength": 32 },
        "country": { "type": "string", "minLength": 2, "maxLength": 2 },
        "phone": { "type": "string", "maxLength": 64 },
        "metadata": { "type": "object", "additionalProperties": true }
      }
    },

    "line_items": {
      "description": "Items being shipped.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["sku", "quantity"],
        "properties": {
          "sku": { "type": "string", "maxLength": 128 },
          "name": { "type": "string", "maxLength": 512 },
          "quantity": { "type": "number", "exclusiveMinimum": 0 },
          "metadata": { "type": "object", "additionalProperties": true }
        }
      }
    },

    "service_level": {
      "description": "Requested service level.",
      "type": "string",
      "enum": ["economy", "standard", "express", "overnight", "local_delivery"]
    },

    "carrier_preferences": {
      "description": "Preferred carriers / methods.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allowed_carriers": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 16
        },
        "blocked_carriers": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 16
        }
      }
    },

    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

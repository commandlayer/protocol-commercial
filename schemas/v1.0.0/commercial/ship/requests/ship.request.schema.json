{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/ship/requests/ship.request.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ship.request",
  "description": "Request schema for initiating a shipment / fulfillment.",
  "type": "object",
  "additionalProperties": false,
  "required": ["x402", "trace", "order_id", "destination"],
  "properties": {
    "x402": {
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json" }
      ]
    },
    "trace": {
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json" }
      ]
    },
    "order_id": {
      "description": "Logical order identifier being shipped.",
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "destination": {
      "description": "Shipping destination address.",
      "type": "object",
      "additionalProperties": false,
      "required": ["line1", "city", "country", "postal_code"],
      "properties": {
        "line1": { "type": "string", "maxLength": 256 },
        "line2": { "type": "string", "maxLength": 256 },
        "city": { "type": "string", "maxLength": 128 },
        "region": { "type": "string", "maxLength": 128 },
        "country": { "type": "string", "maxLength": 2 },
        "postal_code": { "type": "string", "maxLength": 32 }
      }
    },
    "amount": {
      "description": "Optional shipping charge associated with this shipment.",
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.amount.schema.json" }
      ]
    },
    "settlement": {
      "description": "Optional settlement destination for shipping fees.",
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.settlement.schema.json" }
      ]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

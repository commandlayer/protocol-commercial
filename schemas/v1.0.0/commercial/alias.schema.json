{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/alias.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "commercial.alias",
  "type": "object",
  "required": [
    "name",
    "aliases",
    "version"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0.0"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z]+$"
    },
    "aliases": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z]+$"
      },
      "uniqueItems": true
    }
  }
}
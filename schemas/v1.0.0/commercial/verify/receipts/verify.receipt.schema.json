{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/verify/receipts/verify.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "verify.receipt",
  "type": "object",
  "required": [
    "ok",
    "ts",
    "requestId"
  ],
  "additionalProperties": true,
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "requestId": {
      "type": "string",
      "maxLength": 128
    },
    "result": {
      "description": "Result payload (shape is verb-specific)."
    },
    "error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "required": [
        "message"
      ],
      "additionalProperties": true
    }
  }
}
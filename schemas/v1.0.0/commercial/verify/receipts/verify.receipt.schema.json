{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/verify/receipts/verify.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "verify.receipt",
  "description": "Receipt schema for verifying a commercial transaction.",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "result": {
          "description": "Verification result payload.",
          "type": "object",
          "additionalProperties": false,
          "required": ["target", "verified", "status"],
          "properties": {
            "target": {
              "description": "The identifier that was verified.",
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "verified": {
              "description": "Whether the transaction matches the provider’s canonical record.",
              "type": "boolean"
            },
            "status": {
              "description": "Provider’s canonical transaction status.",
              "type": "string",
              "enum": ["success", "pending", "failed", "not_found"]
            },
            "amount": {
              "description": "Canonical amount/asset as seen by provider.",
              "allOf": [
                { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.amount.schema.json" }
              ]
            },
            "settlement": {
              "description": "Canonical settlement destination as seen by provider.",
              "allOf": [
                { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.settlement.schema.json" }
              ]
            },
            "reason": {
              "description": "Optional explanation when verified = false or status != success.",
              "type": "string",
              "maxLength": 1024
            },
            "metadata": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "usage": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  ]
}

{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/verify/requests/verify.request.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "verify.request",
  "description": "Request schema for verifying the status and details of a commercial transaction.",
  "type": "object",
  "additionalProperties": false,
  "required": ["x402", "trace", "target"],
  "properties": {
    "x402": {
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json" }
      ]
    },
    "trace": {
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json" }
      ]
    },
    "target": {
      "description": "Identifier to verify (e.g., transaction_id, checkout_id, purchase_id).",
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "expected_amount": {
      "description": "Optional expectation for amount/asset, used to assert correctness.",
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.amount.schema.json" }
      ]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

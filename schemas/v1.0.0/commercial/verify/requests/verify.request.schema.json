{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/verify/requests/verify.request.schema.json",
  "title": "verify.request (v1.0.0)",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "trace",
    "identity",
    "subject",
    "checks"
  ],

  "properties": {
    "trace": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json"
    },
    "identity": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/identity.schema.json"
    },

    "subject": {
      "description": "Entity being verified (wallet, user, device, payment method).",
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "id"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["wallet", "user", "payment_method", "device", "merchant"]
        },
        "id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "ens": {
          "type": "string",
          "maxLength": 256
        },
        "wallet": {
          "type": "string",
          "maxLength": 128
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },

    "checks": {
      "description": "Verification checks to perform.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "EMAIL_OWNERSHIP",
          "PHONE_OWNERSHIP",
          "WALLET_OWNERSHIP",
          "KYC_LITE",
          "KYC_FULL",
          "AML_SCREENING",
          "DEVICE_FRAUD",
          "BEHAVIORAL_RISK"
        ]
      }
    },

    "context": {
      "description": "Context of this verification (e.g. checkout, withdrawal).",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "flow": {
          "type": "string",
          "maxLength": 128
        },
        "reference_id": {
          "type": "string",
          "maxLength": 256
        },
        "amount": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "currency": {
          "type": "string",
          "minLength": 2,
          "maxLength": 16
        }
      }
    },

    "risk_preferences": {
      "description": "Optional thresholds for risk scoring.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_risk_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "block_on_failure": {
          "type": "boolean"
        }
      }
    },

    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/attest/requests/attest.request.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "attest.request",
  "type": "object",
  "required": [
    "x402",
    "actor",
    "trace",
    "input"
  ],
  "additionalProperties": false,
  "properties": {
    "x402": {
      "type": "object",
      "required": [
        "verb",
        "version"
      ],
      "additionalProperties": false,
      "properties": {
        "verb": {
          "type": "string",
          "const": "attest"
        },
        "version": {
          "type": "string",
          "const": "1.0.0"
        }
      }
    },
    "actor": {
      "description": "ENS, DID, or URI identifying the caller",
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(?:[a-z0-9-]+\\.)*[a-z0-9-]+\\.eth$"
        },
        {
          "type": "string",
          "pattern": "^did:[a-z0-9]+:.*$"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    },
    "trace": {
      "type": "object",
      "required": [
        "requestId",
        "ts",
        "nonce"
      ],
      "additionalProperties": false,
      "properties": {
        "requestId": {
          "type": "string",
          "maxLength": 128
        },
        "ts": {
          "type": "string",
          "format": "date-time"
        },
        "nonce": {
          "type": "string",
          "minLength": 8,
          "maxLength": 64
        }
      }
    },
    "input": {
      "type": "object",
      "description": "Inputs for commercial verb `attest`.",
      "additionalProperties": true
    },
    "options": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/refund/requests/refund.request.schema.json",
  "title": "refund.request (v1.0.0)",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "trace",
    "identity",
    "payment_reference",
    "amount",
    "currency",
    "reason"
  ],

  "properties": {
    "trace": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json"
    },
    "identity": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/identity.schema.json"
    },

    "payment_reference": {
      "description": "Original payment / checkout reference.",
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },

    "amount": {
      "type": "number",
      "exclusiveMinimum": 0
    },

    "currency": {
      "type": "string",
      "minLength": 2,
      "maxLength": 16
    },

    "reason": {
      "type": "string",
      "maxLength": 512
    },

    "reason_code": {
      "type": "string",
      "enum": ["customer_request", "fraud", "duplicate", "product_issue", "other"]
    },

    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

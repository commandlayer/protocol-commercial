{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/refund/requests/refund.request.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "refund.request",
  "description": "Request schema for refunding a prior checkout or purchase.",
  "type": "object",
  "additionalProperties": false,
  "required": ["x402", "trace", "original_transaction_id"],
  "properties": {
    "x402": {
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json" }
      ]
    },
    "trace": {
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json" }
      ]
    },
    "original_transaction_id": {
      "description": "Identifier of the original transaction/checkout being refunded.",
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "amount": {
      "description": "Amount to refund. If omitted, implies full refund.",
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.amount.schema.json" }
      ]
    },
    "settlement_override": {
      "description": "Optional override for where the refund should be sent (e.g., different wallet).",
      "allOf": [
        { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.settlement.schema.json" }
      ]
    },
    "reason": {
      "description": "Human-readable reason for the refund.",
      "type": "string",
      "maxLength": 1024
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}

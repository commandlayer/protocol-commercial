{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/refund/receipts/refund.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "refund.receipt",
  "description": "Receipt schema for a refund invocation.",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "result": {
          "description": "Refund-specific result payload.",
          "type": "object",
          "additionalProperties": false,
          "required": ["refund_id", "original_transaction_id", "status"],
          "properties": {
            "refund_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "original_transaction_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "amount": {
              "description": "Amount actually refunded.",
              "allOf": [
                { "$ref": "https://commandlayer.org/schemas/v1.0.0/commercial/_shared/payment.amount.schema.json" }
              ]
            },
            "status": {
              "type": "string",
              "enum": ["success", "pending", "failed"]
            },
            "metadata": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "usage": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  ]
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://commandlayer.org/schemas/v1.0.0/commercial/refund/receipts/refund.receipt.schema.json",
  "title": "refund.receipt (v1.0.0)",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "trace",
    "identity",
    "refund_id",
    "payment_reference",
    "status",
    "amount",
    "currency"
  ],

  "properties": {
    "trace": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/trace.schema.json"
    },
    "identity": {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/identity.schema.json"
    },

    "refund_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },

    "payment_reference": {
      "type": "string",
      "maxLength": 256
    },

    "status": {
      "type": "string",
      "enum": ["pending", "succeeded", "failed", "canceled"]
    },

    "amount": {
      "type": "number",
      "exclusiveMinimum": 0
    },

    "currency": {
      "type": "string",
      "minLength": 2,
      "maxLength": 16
    },

    "settlement": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "network": { "type": "string", "maxLength": 64 },
        "asset": { "type": "string", "maxLength": 32 },
        "tx_hash": { "type": "string", "maxLength": 128 },
        "block_number": { "type": "integer", "minimum": 0 }
      }
    },

    "created_at": {
      "type": "string",
      "format": "date-time"
    },

    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
